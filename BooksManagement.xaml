<Window x:Class="library_management_system.BooksManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:library_management_system"
        Title="Books Management" 
        Height="1080" 
        Width="1920" 
        WindowStartupLocation="CenterScreen"
           WindowState="Maximized"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate x:Key="BookItemTemplate">
                <Border Background="#252525" CornerRadius="5" Padding="10" Margin="2">
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="{Binding Author}" FontStyle="Italic" Foreground="#CCCCCC"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding Genre}" Foreground="#AAAAAA"/>
                            <TextBlock Text=" • " Foreground="#666666"/>
                            <TextBlock Text="{Binding Quantity}" Foreground="#AAAAAA"/>
                            <TextBlock Text=" copies" Foreground="#666666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Navigation Bar -->
        <Border Background="#1E1E1E" Height="50" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="Library Management System" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"
                           VerticalAlignment="Center" 
                           Margin="10,0,0,0" 
                           HorizontalAlignment="Left"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Margin="0,0,10,0">
                    <Button Content="Dashboard" Click="GoToDashboard" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Manage Users" Click="GoToManageUsers" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Borrowing Policies" Click="GoToBorrowingPolicies" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Book Inventory" Click="GoToBooks" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Reports" Click="GoToReports" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Account" Click="GoToAccount" Style="{StaticResource NavButtonStyle}"/>

                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Margin="20,60,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Book List Section -->
            <Border Style="{StaticResource PanelStyle}" Grid.Column="0">
                <StackPanel>
                    <Grid>
                        <TextBlock Text="Book Inventory" Style="{StaticResource HeaderTextStyle}"/>
                        <Button Content="Refresh" 
                                Click="RefreshBookList_Click"
                                Style="{StaticResource ActionButtonStyle}"
                                HorizontalAlignment="Left" Margin="821,0,0,0" Width="74"/>
                    </Grid>

                    <ListBox x:Name="BookList" 
                             Margin="0,10,0,0"
                             Background="Transparent"
                             ItemTemplate="{StaticResource BookItemTemplate}"
                             ScrollViewer.VerticalScrollBarVisibility="Auto" Height="500">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#252525"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#20B2AA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Manage Book Section -->
            <Border Style="{StaticResource PanelStyle}" Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Manage Books" Style="{StaticResource HeaderTextStyle}"/>

                    <StackPanel Margin="0,15,0,0">
                        <TextBlock Text="Title" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="TitleBox" Style="{StaticResource TextBoxStyle}" Height="40"/>

                        <TextBlock Text="Author" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox x:Name="AuthorBox" Style="{StaticResource TextBoxStyle}" Height="40"/>

                        <TextBlock Text="Genre" Foreground="White" Margin="0,10,0,5"/>
                        <StackPanel>
                            <CheckBox x:Name="FictionCheckBox" Content="Fiction" Margin="0,2" Foreground="White"/>
                            <CheckBox x:Name="NonFictionCheckBox" Content="Non-Fiction" Margin="0,2" Foreground="White"/>
                            <CheckBox x:Name="ScienceCheckBox" Content="Science" Margin="0,2" Foreground="White"/>
                            <CheckBox x:Name="HistoryCheckBox" Content="History" Margin="0,2" Foreground="White"/>
                            <CheckBox x:Name="BiographyCheckBox" Content="Biography" Margin="0,2" Foreground="White"/>
                        </StackPanel>

                        <TextBlock Text="Quantity" Foreground="White" Margin="0,10,0,5"/>
                        <TextBox x:Name="QuantityBox" 
                                 Style="{StaticResource TextBoxStyle}"
                                 PreviewTextInput="QuantityBox_PreviewTextInput"
                                 PreviewKeyDown="QuantityBox_PreviewKeyDown" Height="40"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="Clear" 
                                    Click="ClearInputFields_Click"
                                    Style="{StaticResource ActionButtonStyle}" Width="60"/>
                            <Button Content="Save Book" 
                                    Click="AddBook" 
                                    Style="{StaticResource ActionButtonStyle}"
                                    Margin="10,0,0,0" Height="29" Width="94"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>