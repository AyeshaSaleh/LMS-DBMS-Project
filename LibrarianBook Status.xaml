<Window x:Class="library_management_system.L.LibrarianBookStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Status"
        Background="#121212"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Sea Green Glow Button Style -->
        <Style x:Key="NavButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#20B2AA" Offset="0.0"/>
                        <GradientStop Color="#008B8B" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20B2AA" BlurRadius="10" ShadowDepth="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#00CED1" Offset="0.0"/>
                                <GradientStop Color="#20B2AA" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#00CED1" BlurRadius="15" ShadowDepth="0"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for TextBox -->
        <Style x:Key="CustomTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#0A0B1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="Cyan"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Style for CheckBox -->
        <Style x:Key="CustomCheckBox" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <!-- Style for Book Cards -->
        <Style x:Key="BookCard" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#1E1F3E"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="345"/>
            <Setter Property="Height" Value="164"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <StackPanel Grid.Row="0" Background="#FF1E1E1E">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"
                         Text="Library Management System"
                         FontSize="20" FontWeight="Bold"
                         Margin="10,5"
                         Foreground="White"/>
                <StackPanel Grid.Column="1"
                          Orientation="Horizontal"
                          HorizontalAlignment="Right">
                    <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="DashboardButton_Click"/>
                    <Button Content="Book Status" Style="{StaticResource NavButtonStyle}" Click="BookStatusButton_Click"/>
                    <Button Content="Issue/Reserve" Style="{StaticResource NavButtonStyle}" Click="IssueReserveButton_Click"/>
                    <Button Content="Member Records" Style="{StaticResource NavButtonStyle}" Click="MemberRecordsButton_Click"/>
                    <Button Content="Fine Collection" Style="{StaticResource NavButtonStyle}" Click="FineCollectionButton_Click"/>
                    <Button Content="Account" Style="{StaticResource NavButtonStyle}" Click="AccountButton_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="377"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Filters Panel -->
            <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="8" Padding="20" Margin="10,10,0,27">
                <StackPanel>
                    <TextBlock Text="Filters" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>

                    <!-- Title Filter -->
                    <TextBlock Text="Title" Foreground="White" FontSize="16" Margin="10,5,10,5"/>
                    <TextBox Style="{StaticResource CustomTextBox}"
                             x:Name="TitleFilterBox"
                             Margin="10,5,10,5"/>

                    <!-- Author Filter -->
                    <TextBlock Text="Author" Foreground="White" FontSize="16" Margin="10,5,10,5"/>
                    <TextBox Style="{StaticResource CustomTextBox}"
                             x:Name="AuthorFilterBox"
                             Margin="10,5,10,5"/>

                    <!-- Genre Filter -->
                    <TextBlock Text="Genre" Foreground="White" FontSize="16" Margin="10,5,10,5"/>
                    <TextBox Style="{StaticResource CustomTextBox}"
                             x:Name="GenreFilterBox"
                             Margin="10,5,10,5"/>

                    <!-- Status Filter -->
                    <TextBlock Text="Status" Foreground="White" FontSize="16" Margin="10,5,10,5"/>
                    <StackPanel>
                        <CheckBox x:Name="AvailableCheckBox" Content="Available" 
                                 Style="{StaticResource CustomCheckBox}" 
                                 IsChecked="True" Margin="10,5,10,5"/>
                        <CheckBox x:Name="UnavailableCheckBox" Content="Unavailable" 
                                 Style="{StaticResource CustomCheckBox}" 
                                 IsChecked="True" Margin="10,5,10,5"/>
                    </StackPanel>

                    <!-- Apply Filter Button -->
                    <Button Content="Apply Filters" 
                            Style="{StaticResource NavButtonStyle}"
                            Margin="10,15,10,5"
                            Click="ApplyFilters_Click"/>
                </StackPanel>
            </Border>

            <!-- Book List -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="36,0,26,0">
                <WrapPanel x:Name="BooksPanel" Margin="10">
                    <!-- Book cards will be loaded dynamically from database -->
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>