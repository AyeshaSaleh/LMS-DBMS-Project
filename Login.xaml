<Window x:Class="Library_management_system.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Library Management System - Login"
        Height="1080" 
        Width="1920"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        FontFamily="Segoe UI"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#1E1F3E"/>
            <Setter Property="BorderBrush" Value="#5C67F2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="{x:Type PasswordBox}">
            <Setter Property="Background" Value="#1E1F3E"/>
            <Setter Property="BorderBrush" Value="#5C67F2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF269996"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#FF269996"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="#FF15163A" 
                CornerRadius="10" 
                Padding="30" 
                Width="666"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Height="458"
                Panel.ZIndex="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
            </Border.Effect>

            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Library Management System" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Username Field -->
                <TextBlock Text="Username" 
                           FontSize="14" 
                           Foreground="White" 
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox" 
                         Style="{StaticResource ModernTextBox}" 
                         Width="402" 
                         Height="46" />

                <!-- Password Field -->
                <TextBlock Text="Password" 
                           FontSize="14" 
                           Foreground="White" 
                           Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" 
                             Style="{StaticResource ModernPasswordBox}" 
                             Width="402" 
                             Height="46" />

                <!-- Forgot Password Link -->
                <TextBlock Text="Forgot Password?" 
                           Foreground="#5C67F2" 
                           FontSize="12" 
                           HorizontalAlignment="Right" 
                           Margin="0,25,103,10" 
                           Cursor="Hand"
                           MouseLeftButtonDown="ForgotPassword_MouseLeftButtonDown"/>

                <!-- Login Button -->
                <Button x:Name="LoginButton" 
                        Content="LOGIN" 
                        Width="204" 
                        Height="30" 
                        Margin="0,20,0,15" 
                        Style="{StaticResource RoundedButtonStyle}" 
                        Cursor="Hand"
                        Click="LoginButton_Click"/>

                <!-- Divider -->
                <Border Height="1" Background="#5C67F2" Margin="0,20,0,10"/>

                <!-- Create Account Section -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account?" FontSize="12" Foreground="White"/>
                    <TextBlock Text=" Create Account" 
                               Foreground="#5C67F2" 
                               FontSize="12" 
                               Margin="5,0,0,0" 
                               Cursor="Hand"
                               MouseLeftButtonDown="CreateAccount_MouseLeftButtonDown"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
