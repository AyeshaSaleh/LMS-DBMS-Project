<Window x:Class="Library_management_system.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="APS DHAI PHASE 1 - Library Management System" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FontFamily="Segoe UI"
        Background="#1A1A2E" 
        WindowState="Maximized">

    <Window.Resources>
        <Style x:Key="PurpleButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#6A0DAD"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#33000000"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#8E44AD"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Color="#AAE056F4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#FF121212" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="283" Background="#FF1A1A2E" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Height="124" Width="152" Source="/logo-whote (1).png"/>
                <TextBlock Text="APS DHAI PHASE 1" 
                           Margin="0,0,0,100" 
                           HorizontalAlignment="Center" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <Image HorizontalAlignment="Left" Height="787" Margin="283,0,0,0" 
               VerticalAlignment="Top" Width="1175" Source="/Screenshot 2025-04-05 141506.png"/>

        <TextBlock HorizontalAlignment="Left" Height="72" Margin="662,283,0,0" 
                   TextWrapping="Wrap" Text="WELCOME TO" VerticalAlignment="Top" 
                   Width="239" Foreground="White" FontSize="36" FontWeight="Bold"/>

        <TextBlock HorizontalAlignment="Left" Height="58" Margin="488,336,0,0" 
                   TextWrapping="Wrap" Text="APS LIBRARY MANAGEMENT SYSTEM" 
                   VerticalAlignment="Top" Width="662" Foreground="White" 
                   FontSize="36" FontWeight="Bold" RenderTransformOrigin="0.514,0.006"/>

        <Button x:Name="EnterSystemButton" Content="Enter System" 
                HorizontalAlignment="Left" Height="44" Margin="700,399,0,0" 
                VerticalAlignment="Top" Width="205" Background="#FF282957" 
                BorderBrush="#FF20B2AA" Foreground="White" FontWeight="Bold" 
                FontSize="20" Cursor="Hand" Click="EnterSystem_Click"
                RenderTransformOrigin="0.842,0.319">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            CornerRadius="12" BorderThickness="0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#FF20B2AA" 
                                            BlurRadius="20" Opacity="0.7"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3DC7BE"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Color="#FF3DC7BE" 
                                                    BlurRadius="25" Opacity="0.9"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF18857E"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="CreditPageButton" Content="Credit Page" 
                HorizontalAlignment="Left" Height="44" Margin="503,399,0,0" 
                VerticalAlignment="Top" Width="152" Background="#FF20B2AA" 
                BorderBrush="#FF20B2AA" Foreground="White" FontWeight="Bold" 
                FontSize="20" Cursor="Hand" Click="CreditPage_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            CornerRadius="12" BorderThickness="0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#FF20B2AA" 
                                            BlurRadius="20" Opacity="0.7"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3DC7BE"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Color="#FF3DC7BE" 
                                                    BlurRadius="25" Opacity="0.9"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF18857E"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- New Project Overview Button -->
        <Button x:Name="ProjectOverviewButton" Content="Project Overview" 
                HorizontalAlignment="Left" Height="44" Margin="945,399,0,0" 
                VerticalAlignment="Top" Width="172" Background="#FF20B2AA" 
                BorderBrush="#FF20B2AA" Foreground="White" FontWeight="Bold" 
                FontSize="20" Cursor="Hand" Click="ProjectOverview_Click">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                            CornerRadius="12" BorderThickness="0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" Color="#FF20B2AA" 
                                            BlurRadius="20" Opacity="0.7"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF3DC7BE"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect ShadowDepth="0" Color="#FF3DC7BE" 
                                                    BlurRadius="25" Opacity="0.9"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#FF18857E"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <TextBlock Text="© 2025 APS DHAI PHASE 1 LIBRARY" 
                   VerticalAlignment="Bottom" HorizontalAlignment="Left" 
                   Margin="667,0,0,10" Foreground="#CCCCCC"
                   FontSize="14" FontWeight="SemiBold"/>
    </Grid>
</Window>