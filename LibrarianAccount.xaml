<Window x:Class="Library_Management_System.LibrarianAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Librarian Account"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowState="Maximized"
        Background="#121212">

    <Viewbox Stretch="Fill">
        <Grid Width="1920" Height="1080">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Background="#383838">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Margin" Value="10,5"/>
                        <Setter Property="Background" Value="#484848"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </StackPanel.Resources>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Library Management System"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="10,5"
                               Foreground="White"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <Button Content="Dashboard" Background="LightSeaGreen" Click="Dashboard_Click"/>
                        <Button Content="Book Status" Background="LightSeaGreen" Click="BookStatus_Click"/>
                        <Button Content="Issue/Reserve" Background="LightSeaGreen" Click="IssueReserve_Click"/>
                        <Button Content="Member Records" Background="LightSeaGreen" Click="MemberRecords_Click"/>
                        <Button Content="Fine Collection" Background="LightSeaGreen" Click="FineCollection_Click"/>
                        <Button Content="Account" Background="LightSeaGreen" Click="Account_Click"/>
                        <Button Content="Logout" Background="#FFB22036" Foreground="White" Click="Logout_Click">
                            <Button.Effect>
                                <DropShadowEffect Color="LightSeaGreen" ShadowDepth="0" BlurRadius="10" Opacity="1"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="10">
                <Border Background="#1e1e1e"
                        Padding="20"
                        CornerRadius="5"
                        Margin="365,233,289,313">
                    <StackPanel>
                        <TextBlock Text="Personal Information"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="First Name"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBox x:Name="FirstNameTextBox"
                                 Background="#FF1E1E1E"
                                 BorderBrush="LightSeaGreen"
                                 Foreground="White"
                                 Margin="0,0,0,10"
                                 Height="33"/>

                        <TextBlock Text="Last Name"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBox x:Name="LastNameTextBox"
                                 Background="#FF1E1E1E"
                                 BorderBrush="LightSeaGreen"
                                 Foreground="White"
                                 Margin="0,0,0,10"
                                 Height="33"/>

                        <TextBlock Text="Email"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <TextBox x:Name="EmailTextBox"
                                 Background="#FF1E1E1E"
                                 BorderBrush="LightSeaGreen"
                                 Foreground="White"
                                 Margin="0,0,0,10"
                                 Height="31"/>

                        <TextBlock Text="Password"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                     Background="#FF1E1E1E"
                                     BorderBrush="LightSeaGreen"
                                     Foreground="White"
                                     Margin="0,0,0,20"
                                     Height="34"/>

                        <Button Content="Update Information"
                                HorizontalAlignment="Center"
                                Background="LightSeaGreen"
                                Foreground="White"
                                Padding="15,5"
                                Click="UpdateInformation_Click"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Footer -->
            <Grid Grid.Row="2"
                  Background="#383838"
                  Height="30"/>
        </Grid>
    </Viewbox>
</Window>
