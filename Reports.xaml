<Window x:Class="library_management_system.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        xmlns:local="clr-namespace:library_management_system"
        Title="Library Reports Dashboard"
        Height="1080"
        Width="1920"
        WindowStartupLocation="CenterScreen"
           WindowState="Maximized"
        Loaded="Window_Loaded">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ChartContainer" TargetType="Border">
                <Setter Property="Background" Value="#1E1E1E"/>
                <Setter Property="CornerRadius" Value="10"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="20"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#20B2AA"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Navigation Bar -->
        <Border Background="#1E1E1E" Height="50" VerticalAlignment="Top">
            <Grid>
                <TextBlock Text="Library Management System" 
                           HorizontalAlignment="Left"
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"
                           VerticalAlignment="Center" 
                           Margin="20,0,0,0"/>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Dashboard" Style="{StaticResource NavButtonStyle}" Click="GoToDashboard"/>
                    <Button Content="Manage Users" Style="{StaticResource NavButtonStyle}" Click="GoToManageUsers"/>
                    <Button Content="Borrowing Policies" Style="{StaticResource NavButtonStyle}" Click="GoToBorrowingPolicies"/>
                    <Button Content="Book Inventory" Style="{StaticResource NavButtonStyle}" Click="GoToBooks"/>
                    <Button Content="Reports" Style="{StaticResource NavButtonStyle}" Click="GoToReports"/>
                    <Button Content="Account" Style="{StaticResource NavButtonStyle}" Click="GoToAccount"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,50,0,0">
            <StackPanel HorizontalAlignment="Center" Width="1200">
                <!-- Books Borrowed Chart Container -->
                <Border Style="{StaticResource ChartContainer}">
                    <StackPanel>
                        <TextBlock Text="Books Borrowed Per Month" Style="{StaticResource HeaderTextStyle}"/>
                        <oxy:PlotView x:Name="BooksBorrowedChart" 
                                    Model="{Binding BooksBorrowedModel}"
                                    Height="400" 
                                    Width="1100"
                                    Background="Transparent"/>
                    </StackPanel>
                </Border>

                <!-- Book Categories Chart Container -->
                <Border Style="{StaticResource ChartContainer}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="Book Categories" Style="{StaticResource HeaderTextStyle}"/>
                        <oxy:PlotView x:Name="BookCategoriesChart" 
                                    Model="{Binding BookCategoriesModel}"
                                    Height="400"
                                    Width="1100"
                                    Background="Transparent"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>