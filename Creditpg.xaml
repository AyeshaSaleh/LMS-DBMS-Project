<Window x:Class="Library_management_system.Creditpg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Database Project Credits" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF121212" 
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="LightSeaGreen" Padding="15">
            <TextBlock Text="DATABASE MANAGEMENT SYSTEMS PROJECT" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" Margin="25">
            <!-- Course Instructors -->
            <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="COURSE INSTRUCTORS" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#FFF9FAFC"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                        <TextBlock Text="• " FontSize="16" Foreground="White"/>
                        <TextBlock Text="Mr. Danish Hamid Khattak" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text=" (DBMS Theory)" FontSize="16" Foreground="#FFB0B0B0" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="• " FontSize="16" Foreground="White"/>
                        <TextBlock Text="Ms. Aisha Sattar Choudhry" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                        <TextBlock Text=" (DBMS Lab)" FontSize="16" Foreground="#FFB0B0B0" Margin="5,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Group Mentor -->
            <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="GROUP MENTOR" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="#FFF6F7F9"
                               Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <TextBlock Text="• " FontSize="16" Foreground="White"/>
                        <TextBlock Text="Mr. Syed Wajdan Zeerak" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Project Team -->
            <StackPanel>
                <TextBlock Text="PROJECT TEAM" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Presented by Group 13" 
                           FontSize="16" 
                           Foreground="White"
                           Margin="20,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="40,0,0,5">
                    <TextBlock Text="• " FontSize="16" Foreground="White"/>
                    <TextBlock Text="Wania Adnan" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text=" (Roll No. 242847)" FontSize="16" Foreground="#FFB0B0B0" Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="40,0,0,0">
                    <TextBlock Text="• " FontSize="16" Foreground="White"/>
                    <TextBlock Text="Ayesha Saleh" FontSize="16" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text=" (Roll No. 242893)" FontSize="16" Foreground="#FFB0B0B0" Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Back Button with Proper Template -->
            <Button Content="Back to Main Window" 
                    HorizontalAlignment="Center" 
                    Margin="0,40,0,20"
                    Width="180" 
                    Height="40"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Cursor="Hand"
                    Click="BackButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" 
                                Background="LightSeaGreen"
                                CornerRadius="20"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" 
                                                Color="LightSeaGreen" 
                                                BlurRadius="15" 
                                                Opacity="0.7"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3DC7BE"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="0" 
                                                        Color="#3DC7BE" 
                                                        BlurRadius="20" 
                                                        Opacity="0.9"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#18857E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF0A0A0A" Padding="15" Margin="0,48,0,0">
            <StackPanel>
                <TextBlock Text="© 2025 APS DHAI PHASE 1 LIBRARY" 
                           Foreground="#FF808080"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>