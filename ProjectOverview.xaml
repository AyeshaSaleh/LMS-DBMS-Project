<Window x:Class="Library_management_system.ProjectOverview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Overview - Library Management System" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#FF121212" 
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="15">
            <TextBlock Text="LIBRARY MANAGEMENT SYSTEM - PROJECT OVERVIEW" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"
                       FontFamily="Segoe UI"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20">
            <StackPanel>
                <!-- System Introduction -->
                <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="SYSTEM INTRODUCTION" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF20B2AA"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="The APS DHA Phase 1 Library Management System is a comprehensive software solution designed to streamline library operations. It provides an efficient way to manage books, members, transactions, and reporting for the school library. The system supports two main user roles with distinct privileges to ensure proper access control and data security."
                                   TextWrapping="Wrap"
                                   FontSize="14" 
                                   Foreground="White"
                                   Margin="20,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- System Actors -->
                <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="SYSTEM ACTORS" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF20B2AA"
                                   Margin="0,0,0,10"/>

                        <!-- Admin Section -->
                        <Border BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Margin="20,0,0,15" Padding="10">
                            <StackPanel>
                                <TextBlock Text="1. ADMINISTRATOR" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#FF8E44AD"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="The administrator has full control over the system with the highest level of privileges."
                                           TextWrapping="Wrap"
                                           FontSize="14" 
                                           Foreground="White"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Admin Responsibilities:" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FF3DC7BE"
                                           Margin="0,0,0,5"/>

                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Manage Book Inventry (Add/Edit/Delete Books)" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Configure system settings and parameters" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Generate comprehensive reports and analytics" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Control System Users" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Manage all library resources and categories" FontSize="14" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Librarian Section -->
                        <Border BorderBrush="#FF333333" BorderThickness="1" CornerRadius="5" Margin="20,0,0,0" Padding="10">
                            <StackPanel>
                                <TextBlock Text="2. LIBRARIAN" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#FF8E44AD"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="The librarian handles day-to-day library operations with restricted privileges."
                                           TextWrapping="Wrap"
                                           FontSize="14" 
                                           Foreground="White"
                                           Margin="0,0,0,10"/>

                                <TextBlock Text="Librarian Responsibilities:" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FF3DC7BE"
                                           Margin="0,0,0,5"/>

                               
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Handle book checkouts and returns" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Manage library members (Register/Update members)" FontSize="14" Foreground="White"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                    <TextBlock Text="• " FontSize="14" Foreground="White"/>
                                    <TextBlock Text="Process fines and payments" FontSize="14" Foreground="White"/>
                                </StackPanel>
                              
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- System Features -->
                <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="KEY SYSTEM FEATURES" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF20B2AA"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="User authentication and role-based access control" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Comprehensive book management with categorization" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Member registration and management" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                       
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Fine calculation for overdue books" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Search functionality for books and members" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Reporting module for analytics and statistics" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                        </StackPanel>
                       
                    </StackPanel>
                </Border>

                <!-- Technical Details -->
                <Border BorderBrush="#FF1E1E1E" BorderThickness="0,0,0,2" Padding="0,0,0,15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="TECHNICAL IMPLEMENTATION" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#FF20B2AA"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="The system is built using modern technologies to ensure reliability, security, and performance:"
                                   TextWrapping="Wrap"
                                   FontSize="14" 
                                   Foreground="White"
                                   Margin="20,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Frontend: WPF (Windows Presentation Foundation)" FontSize="14" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Backend: C# .NET Core" FontSize="14" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                            <TextBlock Text="• " FontSize="14" Foreground="White"/>
                            <TextBlock Text="Database: My SQL Workbench" FontSize="14" Foreground="White"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Back Button -->
                <Button Content="Back to Main Window" 
                        HorizontalAlignment="Center" 
                        Margin="0,20,0,20"
                        Width="200" 
                        Height="45"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Cursor="Hand"
                        Click="BackButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border x:Name="border" 
                                    Background="#1A1A2E"
                                    CornerRadius="8"
                                    BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="0" 
                                                    Color="#1A1A2E" 
                                                    BlurRadius="15" 
                                                    Opacity="0.7"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#2E2E4A"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="0" 
                                                            Color="#2E2E4A" 
                                                            BlurRadius="20" 
                                                            Opacity="0.9"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#0F0F1F"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF0A0A0A" Padding="15">
            <StackPanel>
                <TextBlock Text="© 2025 APS DHAI PHASE 1 LIBRARY - LIBRARY MANAGEMENT SYSTEM" 
                           Foreground="#FF808080"
                           FontSize="12"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>