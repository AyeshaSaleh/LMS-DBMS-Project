<Window x:Class="library_management_system.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" 
        Height="450" 
        Width="400"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="RoleStatusCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Margin" Value="5,2"/>
                <Setter Property="Foreground" Value="{StaticResource TextColorBrush}"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Edit User" Style="{StaticResource HeaderTextStyle}"/>

            <TextBlock Text="Name:" Margin="0,5"/>
            <TextBox x:Name="txtName" Style="{StaticResource TextBoxStyle}"/>

            <TextBlock Text="Email:" Margin="0,5"/>
            <TextBox x:Name="txtEmail" Style="{StaticResource TextBoxStyle}" IsReadOnly="True"/>

            <TextBlock Text="Role:" Margin="0,5"/>
            <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                <CheckBox x:Name="chkAdmin" Content="Admin" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="RoleCheckBox_Checked"/>
                <CheckBox x:Name="chkLibrarian" Content="Librarian" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="RoleCheckBox_Checked"/>
                <CheckBox x:Name="chkMember" Content="Member" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="RoleCheckBox_Checked"/>
            </StackPanel>

            <TextBlock Text="Status:" Margin="0,5"/>
            <StackPanel Orientation="Vertical" Margin="5,0,0,0">
                <CheckBox x:Name="chkActive" Content="Active" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="StatusCheckBox_Checked"/>
                <CheckBox x:Name="chkInactive" Content="Inactive" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="StatusCheckBox_Checked"/>
                <CheckBox x:Name="chkSuspended" Content="Suspended" 
                          Style="{StaticResource RoleStatusCheckBoxStyle}"
                          Checked="StatusCheckBox_Checked"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Cancel" Style="{StaticResource ActionButtonStyle}" Click="Cancel_Click"/>
                <Button Content="Save" Style="{StaticResource ActionButtonStyle}" Click="Save_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>